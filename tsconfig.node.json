{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
     "src/**/*.d.ts",
    "src/preload/*.d.ts",
    "*.ts",
    "*.d.ts",
    "forge.env.d.ts",
    "src/main/**/*",
    "src/preload/**/*",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "coverage",
    ".vscode",
    ".idea",
    "**/*.spec.ts",
    "**/__tests__",
    "**/.git"
  ],
  "compilerOptions": {
    "composite": true
  }
}