{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.d.ts",
    "src/main/**/*.d.ts",
    "src/renderer/**/*.vue",
    "src/renderer/**/*.ts",
    "src/preload/*.ts",
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "coverage",
    ".vscode",
    ".idea",
    "**/*.spec.ts",
    "**/__tests__",
    "**/.git"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ]
    }
  }
}